<!-- if statement, if title then display title, else redirect -->
<% if (title) { %>
  <h1><%= title %></h1>
  <% } else {
      res.redirect('/')
  } %>
  
  <!-- message -->
  <%- messages() %>
  
  <!-- Options display -->
  <div id="management">
      <a href="/inv/add_classification" title="Add new classification">Add New Classification</a><br>
      <a href="/inv/add-vehicle" title="Add new vehicle">Add New Vehicle</a>
  </div>

  <h2>Manage Inventory</h2>

  <%- classificationSelect %>

  <table id="inventoryDisplay"></table>

  <noscript>JavaScript must be enabled to use this page.</noscript>

  <%- approves %>

  <h2>My Reviews</h2>
     <% if (reviews && reviews.length > 0) { %>
         <ol class="review-list">
             <% reviews.forEach(function(review) { %>
                 <li>Reviewed the <%= review.review_item %> on <%= review.review_date %> |
                     <a title="Edit review" href="/review/edit/<%= review.review_id %>">Edit</a> |
                     <a title="Delete review" href="/review/delete/<%= review.review_id %>">Delete</a>
                 </li>
             <% }) %>
         </ol>
     <% } else { %>
         <p>No reviews available.</p>
     <% } %>

  <script src="../../js/inventory.js"></script>